titlemkv(){
	filename=$(basename "$1")
	fname="${filename%.*}"
	mkvpropedit $1 --set title=$fname
}
brewlistdeps() {
	for app in $(brew list)
	do
		echo -n $fg[blue]$app $fg[white]
		brew deps $app | awk '{printf(" %s ", $0)}'
		echo ''
	done
}

brewlisttaps() {
	for app in $(brew list)
	do
		brew info $app
		echo ''
	done
}

brewlisttap() {
	for app in $(brew list)
	do
		if brew info $app | grep 'homebrew-cask'; then
			echo $app
		fi
	done
}


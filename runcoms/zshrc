freload() { while (( $# ))
	do
		unfunction $1
		autoload -U $1
		shift
	done
}

extractebooks() {
	for d in */;
	do
		# dname=${d%*/}
		echo ${d%*/}
		cd $d
		parallel -j1 7z e -y -bso0 {} ::: *.zip && 7z e -y -bso0 *.rar([1])
		if [[ $? -eq 0 ]]; then
			rm *.(r*|zip|nfo|diz)
			zmv '(*)' ../$PWD:t.'$1:e'
		fi
		cd ..
	done
	find $PWD -type d -empty -delete
}

